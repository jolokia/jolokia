<assembly>
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>jolokia-${project.version}</baseDirectory>
  <moduleSets>
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-war</include>
      </includes>
      <binaries>
        <outputFileNameMapping>jolokia.war</outputFileNameMapping>
        <outputDirectory>agents</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-mule</include>
      </includes>
      <binaries>
        <attachmentClassifier>agent</attachmentClassifier>
        <outputFileNameMapping>jolokia-mule.jar</outputFileNameMapping>
        <outputDirectory>agents</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-osgi</include>
      </includes>
      <binaries>        
        <outputFileNameMapping>jolokia-osgi.jar</outputFileNameMapping>
        <outputDirectory>agents</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-osgi-bundle</include>
      </includes>
      <binaries>
        <outputFileNameMapping>jolokia-osgi-bundle.jar</outputFileNameMapping>
        <outputDirectory>agents</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-jvm</include>
      </includes>
      <binaries>
        <attachmentClassifier>agent</attachmentClassifier>
        <outputFileNameMapping>jolokia-jvm.jar</outputFileNameMapping>
        <outputDirectory>agents</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-jmx</include>
      </includes>
      <binaries>
        <outputFileNameMapping>jolokia-jmx.jar</outputFileNameMapping>
        <outputDirectory>jmx</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-spring</include>
      </includes>
      <binaries>
        <outputFileNameMapping>jolokia-spring.jar</outputFileNameMapping>
        <outputDirectory>jmx</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>org.jolokia:jolokia-client-java</include>
      </includes>
      <binaries>
        <outputFileNameMapping>jolokia-client.jar</outputFileNameMapping>
        <outputDirectory>client/java</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
  </moduleSets>
  <fileSets>
    <fileSet>
      <directory>src/assembly</directory>
      <includes>
        <include>README</include>
      </includes>
      <outputDirectory></outputDirectory>
    </fileSet>
    <fileSet>
      <includes>
        <include>LICENSE</include>
        <include>NOTICE</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/site/reference/pdf</directory>
      <includes>
        <include>*.pdf</include>
      </includes>
      <outputDirectory>reference/pdf</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/site/reference/html</directory>
      <includes>
        <include>**/*</include>
      </includes>
      <outputDirectory>reference/html</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>client/javascript/target/compressed</directory>
      <includes>
        <include>**/*.js</include>
      </includes>
      <outputDirectory>client/javascript</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>client/javascript/target/scripts</directory>
      <includes>
        <include>**/*.js</include>
      </includes>
      <outputDirectory>client/javascript</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
