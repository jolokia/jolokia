<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>jolokia-support-jmx</artifactId>
  <version>2.4.0-SNAPSHOT</version>
  <packaging>bundle</packaging>

  <name>jolokia-support-jmx</name>
  <description>Jolokia :: Support :: JMX</description>

  <parent>
    <groupId>org.jolokia</groupId>
    <artifactId>jolokia-parent</artifactId>
    <version>2.4.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <url>https://jolokia.org/</url>

  <dependencies>

    <!-- Jolokia own artifacts -->

    <dependency>
      <groupId>org.jolokia</groupId>
      <artifactId>jolokia-json</artifactId>
    </dependency>

    <dependency>
      <groupId>org.jolokia</groupId>
      <artifactId>jolokia-server-core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jolokia</groupId>
      <artifactId>jolokia-server-core</artifactId>
      <classifier>tests</classifier>
      <scope>test</scope>
    </dependency>

    <!-- This dependency is currently accorded. In principle, any
         serializer could be used (but the lookup would have to be adapted
         accordingly) -->
    <dependency>
      <groupId>org.jolokia</groupId>
      <artifactId>jolokia-service-serializer</artifactId>
    </dependency>

    <!-- OSGi dependencies -->

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>osgi.core</artifactId>
      <scope>provided</scope>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>org.jolokia.support.jmx</Bundle-SymbolicName>
            <Bundle-Description>Jolokia JMX Addons</Bundle-Description>
            <Bundle-Activator>org.jolokia.support.jmx.osgi.JmxSupportActivator</Bundle-Activator>
            <Import-Package>
              <!-- JDK -->
              javax.management,
              javax.management.modelmbean,
              javax.management.openmbean,
              <!-- jolokia-json -->
              org.jolokia.json;version="[2.2,3)",
              <!-- jolokia-server-core -->
              org.jolokia.server.core.service.api;version="[2.2,3)",
              org.jolokia.server.core.service.serializer;version="[2.2,3)",
              <!-- jolokia-service-serializer -->
              org.jolokia.service.serializer;version="[2.2,3)",
              <!-- OSGi Core -->
              org.osgi.framework;version="[1.8,2)",
              org.osgi.util.tracker;version="[1.5,2)"
            </Import-Package>
            <Export-Package>
              org.jolokia.support.jmx,
              org.jolokia.support.jmx.osgi
            </Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
