<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <version>2.0.0-M2</version>
  <packaging>bundle</packaging>

  <artifactId>jolokia-support-jmx</artifactId>
  <description>Jolokia :: Support :: JMX</description>

  <parent>
    <artifactId>jolokia-parent</artifactId>
    <groupId>org.jolokia</groupId>
    <version>2.0.0-M2</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <dependencies>
    <dependency>
      <groupId>org.jolokia</groupId>
      <artifactId>jolokia-server-core</artifactId>
      <version>${project.version}</version>
    </dependency>

    <!-- This dependency is currently accorded. In principle, any
         serializer could be used (but the lookup would have to be adapted
         accordingly) -->
    <dependency>
      <groupId>org.jolokia</groupId>
      <artifactId>jolokia-service-serializer</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>com.googlecode.json-simple</groupId>
      <artifactId>json-simple</artifactId>
    </dependency>

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.compendium</artifactId>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.jolokia</groupId>
      <artifactId>jolokia-server-core</artifactId>
      <scope>test</scope>
      <classifier>tests</classifier>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>com.google.code.findbugs</groupId>
      <artifactId>annotations</artifactId>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>

        <configuration>
          <instructions>
            <Bundle-SymbolicName>org.jolokia.support.jmx</Bundle-SymbolicName>
            <Bundle-Description>Jolokia JMX Addons</Bundle-Description>
            <Bundle-Activator>org.jolokia.support.jmx.osgi.JmxSupportActivator</Bundle-Activator>

            <Export-Package>
              org.jolokia.support.jmx
            </Export-Package>
            <!-- Don't declare an import on sth not exported -->
            <Import-Package>
              !org.jolokia.service.serializer,
              *
            </Import-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>


</project>