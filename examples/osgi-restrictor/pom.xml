<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>jolokia-example-osgi-restrictor</artifactId>
  <version>2.4.2-SNAPSHOT</version>
  <packaging>bundle</packaging>

  <name>jolokia-example-osgi-restrictor</name>
  <description>osgi restrictor service sample</description>

  <parent>
    <groupId>org.jolokia</groupId>
    <artifactId>jolokia-parent</artifactId>
    <version>2.4.2-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <url>https://jolokia.org/</url>

  <dependencies>

    <!-- Jolokia own artifacts -->

    <dependency>
      <groupId>org.jolokia</groupId>
      <artifactId>jolokia-server-core</artifactId>
    </dependency>

    <!-- OSGi dependencies -->

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>osgi.core</artifactId>
      <scope>provided</scope>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>org.jolokia.examples.osgi.restrictor</Bundle-SymbolicName>
            <Bundle-Description>Jolokia restrictor service (sample)</Bundle-Description>
            <Bundle-Version>${project.version}</Bundle-Version>
            <Bundle-Activator>org.jolokia.osgi.restrictor.RestrictorSampleActivator</Bundle-Activator>
            <Bundle-Name>Jolokia restrictor service (sample)</Bundle-Name>
            <Import-Package>
              <!-- JDK -->
              javax.management,
              <!-- jolokia-server-core -->
              org.jolokia.server.core.restrictor;version="[2.2,3)",
              org.jolokia.server.core.service.api;version="[2.2,3)",
              <!-- OSGi Core -->
              org.osgi.framework;version="[1.8,2)"
            </Import-Package>
            <Export-Package>
              org.jolokia.osgi.restrictor
            </Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
