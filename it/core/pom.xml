<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>jolokia-it-core</artifactId>
  <version>2.3.0</version>
  <packaging>bundle</packaging>

  <name>jolokia-it-core</name>
  <description>Jolokia :: IT :: Core Tests</description>

  <parent>
    <groupId>org.jolokia</groupId>
    <artifactId>jolokia-parent</artifactId>
    <version>2.3.0</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <url>https://jolokia.org/</url>

  <dependencies>

    <!-- Jolokia own artifacts -->

    <dependency>
      <groupId>org.jolokia</groupId>
      <artifactId>jolokia-support-jmx</artifactId>
    </dependency>

    <!-- OSGi dependencies -->

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>osgi.core</artifactId>
      <scope>provided</scope>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>org.jolokia.it.core</Bundle-SymbolicName>
            <Bundle-Version>${project.version}</Bundle-Version>
            <Bundle-Activator>org.jolokia.it.core.ItActivator</Bundle-Activator>
            <Bundle-Name>Jolokia Integration Test Bundle</Bundle-Name>
            <!-- Needed because we export an embedded package only -->
            <Import-Package>
              <!-- JDK -->
              javax.management,
              javax.management.openmbean,
              <!-- jolokia-support-jmx -->
              org.jolokia.support.jmx;version="[2.2,3)",
              <!-- OSGi Core -->
              org.osgi.framework;version="[1.8,2)"
            </Import-Package>
            <Export-Package>
              org.jolokia.it.core,
              org.jolokia.it.core.notification
            </Export-Package>
          </instructions>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifestEntries>
              <Premain-Class>org.jolokia.it.core.ItSetup</Premain-Class>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
