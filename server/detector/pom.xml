<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>jolokia-server-detector</artifactId>
  <version>2.5.0-SNAPSHOT</version>
  <packaging>bundle</packaging>

  <name>jolokia-server-detector</name>
  <description>Jolokia :: Server :: Detector</description>

  <parent>
    <groupId>org.jolokia</groupId>
    <artifactId>jolokia-parent</artifactId>
    <version>2.5.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <url>https://jolokia.org/</url>

  <dependencies>

    <!-- Jolokia own artifacts -->

    <dependency>
      <groupId>org.jolokia</groupId>
      <artifactId>jolokia-server-core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jolokia</groupId>
      <artifactId>jolokia-server-core</artifactId>
      <classifier>tests</classifier>
      <scope>test</scope>
    </dependency>

    <!-- OSGi dependencies -->

    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>osgi.core</artifactId>
      <scope>provided</scope>
      <optional>true</optional>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-Activator>org.jolokia.server.detector.osgi.DetectorActivator</Bundle-Activator>
            <Bundle-SymbolicName>org.jolokia.server.detector</Bundle-SymbolicName>
            <Bundle-Description>Jolokia server detectors</Bundle-Description>
            <Import-Package>
              <!-- JDK -->
              javax.management,
              javax.naming,
              <!-- jolokia-json -->
              org.jolokia.json;version="[2.5,3)",
              <!-- jolokia-core -->
              org.jolokia.core.api;version="[2.5,3)",
              org.jolokia.core.util;version="[2.5,3)",
              <!-- jolokia-server-core -->
              org.jolokia.server.core.detector;version="[2.5,3)",
              org.jolokia.server.core.request;version="[2.5,3)",
              org.jolokia.server.core.service.api;version="[2.5,3)",
              org.jolokia.server.core.service.container;version="[2.5,3)",
              org.jolokia.server.core.service.request;version="[2.5,3)",
              org.jolokia.server.core.util;version="[2.5,3)",
              org.jolokia.server.core.util.jmx;version="[2.5,3)",
              <!-- OSGi Core -->
              org.osgi.framework;version="[1.8,2)",
              <!-- Other -->
              com.ibm.websphere.management;resolution:=optional,
              org.eclipse.jetty.server;resolution:=optional,
              org.jboss.mx.util;resolution:=optional,
              org.mortbay.jetty;resolution:=optional
            </Import-Package>
            <!-- don't export anything - these are internal packages -->
            <Export-Package />
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-project-info-reports-plugin</artifactId>
        <reportSets>
          <reportSet>
            <reports>
              <report>dependencies</report>
            </reports>
          </reportSet>
        </reportSets>
      </plugin>
    </plugins>
  </reporting>

</project>
